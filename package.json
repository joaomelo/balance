{
  "name": "balance",
  "version": "0.20.3",
  "description": "Balance is a personal finance tracking software based only on account balances.",
  "main": "dist/index.html",
  "scripts": {
    "start": "npm run dev:local",
    "test": "npm run dev:local:test",
    "dev:local": "concurrently -n \"firebs,server\" -c \"bgMagenta.bold,bgGreen.bold\" \"firebase emulators:start\" \"npm:dev:local:server\"",
    "dev:local:server": "rimraf dist/* && webpack serve --config webpack.config.js --env devLocal",
    "dev:local:test": "jest --watchAll --detectOpenHandles --coverage=false --setupTestFrameworkScriptFile=./tests/config/dev-local.js",
    "prod:local:lint": "eslint --ext .js,.jsx src/",
    "prod:local:test": "concurrently -n \"servr,tests\" -k -s \"first\" -c \"bgMagenta.bold,bgGreen.bold\" \"npm:dev:local:server\" \"npm:prod:local:test:exec\"",
    "prod:local:test:exec": "firebase emulators:exec -- \"wait-on http://localhost:8181 && jest --forceExit --detectOpenHandles --setupTestFrameworkScriptFile=./tests/config/prod-local.js\"",
    "prod:local:build": "rimraf dist/* && webpack --config webpack.config.js --env prodLocal",
    "prod:local:deploy": "npm run prod:local:lint && npm run prod:local:test && npm run prod:local:build && firebase deploy",
    "dev:ci:server": "rimraf dist/* && webpack serve --config webpack.config.js --env devCi",
    "prod:ci:test": "concurrently -k -s \"first\" -c \"bgMagenta.bold,bgGreen.bold\" \"npm:dev:ci:server\" \"npm:prod:ci:test:exec\"",
    "prod:ci:test:exec": "firebase emulators:exec -- \"wait-on http://localhost:8181 && jest --forceExit --detectOpenHandles --setupTestFrameworkScriptFile=./tests/config/prod-ci.js\"",
    "prod:ci:build": "rimraf dist/* && webpack --config webpack.config.js --env prodCi",
    "prod:ci:deploy": "npm run prod:local:lint && npm run prod:ci:test && npm run prod:ci:build && firebase deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joaomelo/balance.git"
  },
  "author": "jo√£o melo <j@melo.plus> (https://twitter.com/joaomeloplus)",
  "license": "GPL-3.0",
  "homepage": "https://github.com/joaomelo/balance",
  "dependencies": {
    "@date-io/luxon": "^1.3.13",
    "@material-ui/core": "^4.11.4",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.58",
    "@material-ui/pickers": "^3.3.10",
    "axios": "^0.21.1",
    "chart.js": "^3.2.1",
    "chartjs-adapter-luxon": "^1.0.0",
    "core-js": "^3.9.1",
    "email-validator": "^2.0.4",
    "firebase": "^8.6.5",
    "i18next": "^20.3.1",
    "lodash": "^4.17.21",
    "luxon": "^1.27.0",
    "randomcolor": "^0.6.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.10.0",
    "react-router-dom": "^5.2.0",
    "regenerator-runtime": "^0.13.7",
    "rxjs": "^6.6.6",
    "styled-components": "^5.2.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/eslint-parser": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-react": "^7.12.13",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "@types/jest": "^26.0.20",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-styled-components": "^1.12.0",
    "circular-dependency-plugin": "^5.2.0",
    "concurrently": "^6.0.0",
    "copy-webpack-plugin": "^8.1.0",
    "css-loader": "^5.1.3",
    "dotenv": "^8.2.0",
    "eslint": "^7.22.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-jest-formatting": "^2.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-webpack-plugin": "^2.5.2",
    "html-webpack-plugin": "^5.3.1",
    "jest": "^26.6.3",
    "jest-environment-jsdom": "^26.6.2",
    "playwright": "^1.11.1",
    "react-refresh": "^0.9.0",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "wait-on": "^5.3.0",
    "webpack": "^5.27.2",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  }
}
